# Database Configuration
MONGODB_URI=mongodb://localhost:27017/campusbazaar
MONGODB_URI_TEST=mongodb://localhost:27017/campusbazaar_test

# Server Configuration
PORT=8080
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@campusbazaar.edu
FROM_NAME=CampusBazaar

# File Upload Configuration
UPLOAD_PATH=uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:8080
CORS_CREDENTIALS=true

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Redis Configuration (for session storage and caching)
REDIS_URL=redis://localhost:6379

# Socket.io Configuration
SOCKET_IO_CORS_ORIGIN=http://localhost:8080

# Admin Configuration
ADMIN_EMAIL=admin@campusbazaar.edu
ADMIN_PASSWORD=admin123

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_FILE_UPLOAD=true
ENABLE_CHAT=true

# External Services
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
